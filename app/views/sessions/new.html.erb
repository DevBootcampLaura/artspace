
<%= render "shared/top_nav" %>
	<%= form_tag("/login", method: "post", :class => "form") do %>
	  <p><%= label_tag(:email, "Email") %>
	  <%= text_field_tag :email, nil, :required => true %></p>
	  <p><%= label_tag(:password, "Password") %>
	  <%= password_field_tag :password, nil, :required => true %></p>
	  <%= submit_tag("Log In", class:"main_button gray_button") %>
	<% end %>

<% flash.each do |key, val| %>
  <%= val %>
<% end %>

<%= render "shared/footer" %>
