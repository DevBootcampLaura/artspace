<div id="page">
	<%= render "shared/top_nav" %>



	<div id="favorite_label"><h2>Favorite Spaces</h2></div>	
		<div id="favorite" class="user_show">

		  <% current_user.favorite_spaces.each do |fave| %>
		  <div class="fave"><p><%= link_to "#{fave.title}", space_path(fave.id) %></p></div>
		  <% end %>
		</div>

	<div id="upcoming" class="user_show">
	  <h2>Upcoming Rentals</h2>
	  <% current_user.upcoming_reservations.each do |r| %>
	  <p><span class="color">AT</span><%= r.space.title %><span class="color">FROM</span><%= r.start_time.in_time_zone(-6).strftime("%a %m/%d/%y     %I:%M %p") %><span class="color">TO</span><%= r.end_time.in_time_zone(-6).strftime("%I:%M %p") %></p>
	  <%= r.space.address %>     <%= r.space.city %>,    <%= r.space.state %>     <%= r.space.zipcode %>
	  <hr>
	  <% end %>
	</div>
<%= render "shared/footer" %>
</div>
